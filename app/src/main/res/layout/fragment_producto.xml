<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#44000000"
    >

    <TextView
        android:id="@+id/textsubcategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/la_carta"
        android:textSize="@dimen/tam_titulo_subcategoria"

        android:textColor="#ffffff"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/btn_menu_principal"
        android:layout_width="@dimen/tamano_icono_menu_principal"
        android:layout_height="@dimen/tamano_icono_menu_principal"
        android:src="@mipmap/ic_menu_principal"
        android:layout_margin="@dimen/margin_small"
        />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/btn_mi_pedido"
        android:layout_width="@dimen/tamano_icono_carro_pedido"
        android:layout_height="@dimen/tam_ancho_icono_carro_pedido"
        android:layout_margin="@dimen/super_margin_small"
        android:src="@drawable/carro_pedido"
        android:layout_alignRight="@id/textsubcategoria"
        android:scaleType="fitXY"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gridProductos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_mi_pedido"
        android:cacheColorHint="@color/transparente"
        android:scrollbars="none"
        android:layout_marginLeft="@dimen/super_margin_small"
        android:layout_marginRight="@dimen/super_margin_small"
        android:layout_marginTop="@dimen/super_margin_small"

        >
    </android.support.v7.widget.RecyclerView>

