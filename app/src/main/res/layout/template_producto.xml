<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/rojo_transparente_producto"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="5dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparente"

        >
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/placeholder"
            android:layout_width="@dimen/tam_place_holder"
            android:layout_height="@dimen/tam_place_holder"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_producto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alto_template_producto"
            android:scaleType="fitXY"
            />


        <TextView
            android:id="@+id/txtconteo"
            android:layout_width="@dimen/tam_btn_cantidad_producto"
            android:layout_height="@dimen/tam_btn_cantidad_producto"
            android:text="0"
            android:textSize="@dimen/tam_text_cantidad_producto"
            android:textColor="#ffffff"
            android:layout_alignRight="@id/img_producto"
            android:layout_alignBottom="@id/img_producto"
            android:background="@drawable/text_view_redondo"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_bottom_btn_disminuir_mostrar_cantidad_producto"
            />
        <TextView
            android:id="@+id/btn_disminuir"
            android:layout_width="@dimen/tam_btn_cantidad_producto"
            android:layout_height="@dimen/tam_btn_cantidad_producto"
            android:layout_marginRight="@dimen/super_margin_small"
            android:layout_alignBottom="@id/img_producto"
            android:layout_toLeftOf="@id/txtconteo"
            android:text="-"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:background="@drawable/img_view_redondo"
            android:layout_marginBottom="@dimen/margin_bottom_btn_disminuir_mostrar_cantidad_producto"
            />

    </RelativeLayout>
    </android.support.v7.widget.CardView>




















